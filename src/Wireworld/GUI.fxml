<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Wireworld.Controller">
   <top>
      <MenuBar prefHeight="32.0" prefWidth="884.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Plik">
            <items>
                  <MenuItem mnemonicParsing="false" text="Nowy" />
              <MenuItem fx:id="openFileMenu" mnemonicParsing="false" onAction="#openFileMenuOnAction" text="Wczytaj" />
                  <MenuItem mnemonicParsing="false" text="Zapisz" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="exitMenu" mnemonicParsing="false" onAction="#exitMenuOnAction" text="Zakończ" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Symulacja">
            <items>
              <MenuItem mnemonicParsing="false" text="Start" />
                  <MenuItem mnemonicParsing="false" text="Stop" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Informacje">
            <items>
              <MenuItem mnemonicParsing="false" text="Szymon&amp;Szymon Corporation" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="92.0" prefWidth="943.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER">
         <children>
            <Text fx:id="console" fill="WHITE" layoutX="14.0" layoutY="14.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Konsola komunikatów" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
               <font>
                  <Font name="Consolas" size="15.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
   </bottom>
   <right>
    <AnchorPane prefHeight="676.0" prefWidth="265.0" BorderPane.alignment="TOP_CENTER">
         <children>
            <VBox alignment="TOP_CENTER" layoutX="11.0" prefHeight="676.0" prefWidth="287.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Label fx:id="simulationSpeedLabel" alignment="CENTER" prefHeight="31.0" prefWidth="188.0" text="Szybkość symulacji: 1">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Label>
                  <Slider fx:id="simulationSpeedSlider" min="1.0" onMouseClicked="#simulationSpeedSliderDragged" onMouseDragged="#simulationSpeedSliderDragged" prefHeight="18.0" prefWidth="247.0" />
